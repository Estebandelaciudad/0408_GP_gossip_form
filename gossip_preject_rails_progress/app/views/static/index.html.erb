<% gossips = Gossip.all %>
<div class="container ml-5 ">
<h1>Liste des potins</h1>
<% gossips.each_with_index do |gossip, index| %>
    <div class="card mt-2 p-3">
        <div class="pb-3">
        <p>Auteur: <b><%= gossip.user.first_name %> </b></p>
        </div>
        <div>
        <p>Title: <%= link_to "#{gossip.title }", details_path(gossip.id)%></p>
        </div>
    </div>
    
<% end %>
</div>
  


